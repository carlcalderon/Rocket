{
    "output_dir": "deploy",
    "input_dir": "source",
    "compilers": {
        "coffeescript-bare": {
            "executable": "coffee",
            "arguments": "-cb -o {output} {input}"
        }
    },
    "build": [
        {
            "output": "js/",
            "compiler": "coffeescript-bare",
            "input": "coffee/scripts.coffee"
        },
        {
            "output": "css/styles.css",
            "input": "less/styles.less"
        },
        "images",
        "index.html"
    ]
}